using System;
using System.Collections;
class Expt{
    static void Main(String[] args)
     {  
string s = Console.ReadLine();
int c=1;
for(int i=1;i<s.Length;i++)
{
   if(s[i]==s[i-1])
   c++;
   else{
      Console.Write($"{s[i-1]}{c}");
      c=1;
   }
}

 Console.Write($"{s[s.Length-1]}{c}");
   }
      }




