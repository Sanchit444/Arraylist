using System;
class Exp{
   public static void Main(String[] args)
     {
        Console.WriteLine("Enter radius value"); 
        double r = Convert.ToDouble(Console.ReadLine());
       Console.WriteLine("circumeference:1 area:2");
       double a = Convert.ToDouble(Console.ReadLine());
       switch (a)
       {
        case 1:
         Console.WriteLine("Circumference is " +2 * Math.PI*r);
         break;
        case 2:
        Console.WriteLine("Area of circle is "+Math.PI*r*r);
        break;
       }
     }
}

